@model List<TaskInfo>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-dark py-2">Task List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Employee" asp-action="AddEmployees" class="btn btn-primary mx-2">
                    <i class="bi bi-person-plus"></i> Add Employee
                </a>
                <a asp-controller="Task" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Task
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th style="width: 15%;">Name</th>
                    <th style="width: 25%;">Description</th>
                    <th style="width: 20%;">Due Date</th>
                    <th style="width: 10%;">Status</th>
                    <th style="width: 10%;">Assignee</th>
                    <th style="width: 15%;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.DueDate))
                {
                    <tr>
                        <td style="overflow: hidden; text-overflow: ellipsis;">@obj.Name</td>
                        <td style="overflow: hidden; text-overflow: ellipsis;">@obj.Description</td>
                        <td style="white-space: nowrap;">@obj.DueDate.ToString("d")</td>
                        <td style="white-space: nowrap;">@obj.Status</td>
                        <td style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@obj.AssignedEmployee.FirstName</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Task" asp-action="Reassign" asp-route-id="@obj.TaskId" class="btn btn-primary text-nowrap mx-2">
                                    <i class="bi bi-pencil-square"></i> Reassign
                                </a>
                                <a asp-controller="Task" asp-action="Delete" asp-route-id="@obj.TaskId" class="btn btn-danger text-nowrap mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
